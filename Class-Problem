# Object-Oriented Programming file

class Orange(): 
    def _init_(self, w, c):
        self.weight = w
        self.color = c
        self.mold = 0
        print("Created!")
        
    def rot(self, days, temp):
        print("days: ",days,"  temp: ",temp)
        self.mold = days * temp
        
orange = Orange(6, "orange")
print(orange.mold)
orange.rot = (10, 98)
print(orange.mold)

